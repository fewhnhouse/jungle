// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Song {
  id       Int     @default(autoincrement()) @id
  name     String
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId Int?
}

model Artist {
  id    Int    @default(autoincrement()) @id
  name  String @unique
  songs Song[]
}

model Project {
    id: Int @default(autoincrement()) @id
    name: String @unique
    description: String
    statuses: Status[]
    stories: Story[]
    owner: User
    admins: User[]
    members: User[]
    logo: String
    tags: Tag[]
    priorities: Priority[]
}

model Status {
    id: Int @default(autoincrement()) @id
    name: String @unique
    color: String
}

model Tag {
    id: Int @default(autoincrement()) @id
    name: String @unique
    color: String
}

model Priority {
    id: Int @default(autoincrement()) @id
    name: String @unique
    color: String
}

model Task {
    id: Int @default(autoincrement()) @id
    subtasks: Subtask[]
    assignee: User
    owner: User
    name: String
    description: String
    status: Status
    tags: Tag[]
    priority: Priority
}

model Subtask {
    id: Int @default(autoincrement()) @id
    assignee: User
    owner: User
    name: String
    description: String
    status: Status
    tags: Tag[]
    priority: Priority 
}

model Story {
    id: Int @default(autoincrement()) @id
    subtasks: Subtask[]
    assignee: User
    owner: User
    name: String
    description: String
    status: Status
    tags: Tag[]
    priority: Priority
}

model Epic {
    id: Int @default(autoincrement()) @id

}

model User {
    id: Int @default(autoincrement()) @id

}